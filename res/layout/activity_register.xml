<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <!-- Header  Starts -->

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <!-- Logo Start -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/ic_launcher" />
            <!-- Logo Ends -->
        </LinearLayout>
        <!-- Header Ends -->
        <!-- Footer Start -->

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:background="@layout/footer_repeat" >
        </LinearLayout>
        <!-- Footer Ends -->


        <!-- Registration Form -->
        <!-- Registration Form Ends -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- cedula -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cédula niño"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_cedula"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:hint="0-0000-0000"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <!-- nombre completo -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del niño"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_nombreCompleto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:hint="Nombre completo"
                android:singleLine="true" />

            <!-- Edad -->

            <CheckBox
                android:id="@+id/checkBoxMenor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menor de un año" />

            <TextView
                android:id="@+id/textEdad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_edad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:digits="0123456789."
                android:hint="Edad"
                android:inputType="numberDecimal"
                android:maxLength="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/reg_edadMeses"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:singleLine="true"
                android:visibility="gone" />

            <!-- peso -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Peso del niño"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_peso"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:digits="0123456789."
                android:hint="Kg"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <!-- estatura -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Estatura del niño"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_estatura"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:digits="0123456789."
                android:hint="Metros"
                android:inputType="numberDecimal"
                android:singleLine="true" />

            <!-- centro medico -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Centro Médico"
                android:textColor="#372c24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

               

            </LinearLayout>

            <!-- contraseña -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:password="true"
                android:singleLine="true" />

            <!-- boton registrar -->

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Register New Account" />

            <!-- regresar al login -->

            <TextView
                android:id="@+id/link_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dip"
                android:layout_marginTop="40dip"
                android:gravity="center"
                android:text="Ya tiene una cuenta! Regresar al Inicio"
                android:textColor="#025f7c"
                android:textSize="20dip" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>